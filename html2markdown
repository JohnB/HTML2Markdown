def get_file_as_string(filename)
	data = ''
	if (/^https?:\/\// =~ filename)
		open(filename) { |f|
			data = f.read
		}
	else
		f = File.open(filename, "r") 
		f.each_line do |line|
			data += line
		end
	end
	return data
end

ARGV.each do |file|
	file_contents = get_file_as_string file

	puts notice, HTML2Markdown.new(file_contents).to_s
end
